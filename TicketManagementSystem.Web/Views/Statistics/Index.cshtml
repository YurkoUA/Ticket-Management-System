@{
    ViewBag.Title = "Статистика";
}

<h2>@ViewBag.Title</h2>
<p>@Html.ActionLink("Переглянути статистику за місяцями", "Monthly")</p>
<hr />

<p>
    Статистика станом на @Html.DisplayDateTime(DateTime.Now.ToUniversalTime(), "G")
</p>

<div id="by-serial-chart" style="width: 500px; height: 500px;"></div>
<div id="by-color-chart" style="width: 500px; height: 500px;"></div>
<div id="tickets-chart" style="width: 500px; height: 500px;"></div>
<div id="by-number-chart" style="width: 500px; height: 500px;"></div>
<div id="happy-by-serial-chart" style="width: 500px; height: 500px;"></div>
<div id="happy-by-number-chart" style="width: 500px; height: 500px;"></div>

@section scripts {
    @Scripts.Render("https://www.gstatic.com/charts/loader.js", "~/Scripts/statistics.js")
}
