<div id="se-chart-filter-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Фільтрувати</h4>
            </div>
            <div class="modal-body" v-if="OpenedChart != null">
                <form>
                    <div class="form-horizontal" v-if="OpenedChart.Chart">
                        <div v-if="OpenedChart.Chart.ComputingStrategy == ChartComputingStrategy.Period">
                            <div class="form-group">
                                <label class="control-label col-md-2" for="start-date-picker">Початок</label>
                                <div class="col-md-6">
                                    <datepicker :value.sync="OpenedChart.Chart.StartDate"></datepicker>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2" for="end-date-picker">Кінець</label>

                                <div class="col-md-6">
                                    <datepicker :value.sync="OpenedChart.Chart.EndDate"></datepicker>
                                </div>
                            </div>
                        </div>

                        <div v-if="OpenedChart.Chart.ComputingStrategy == ChartComputingStrategy.Moment">
                            <div class="form-group">
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="moment-date-picker">Дата</label>
                                    <div class="col-md-6">
                                        <datepicker :value.sync="OpenedChart.Chart.Date"></datepicker>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрити</button>
                <button type="button" class="btn btn-primary">ОК</button>
            </div>
        </div>
    </div>
</div>
