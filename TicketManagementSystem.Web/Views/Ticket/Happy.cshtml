@model TicketIndexModel

@{
    ViewBag.Title = "Щасливі квитки";
}

@if (Model.Any())
{
    <h2>
        @ViewBag.Title
        <small>@Model.PageInfo.TotalItems шт.</small>
    </h2>

    <div class="panel panel-success">
        <div class="panel-heading">Сторінка @Model.PageInfo.PageNumber з @Model.PageInfo.TotalPages</div>

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <tr>
                    <th>Номер</th>
                    <th>Пачка</th>
                    <th>Колір</th>
                    <th>Серія</th>
                    <th>Дата</th>
                    <th>Примітка</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(item.Number, "Details", new { id = item.Id })</td>
                        <td><a href="@Url.Action("Details", "Package", new { id = item.PackageId })">@item.PackageName</a></td>
                        <td><a href="@Url.Action("Details", "Color", new { id = item.ColorId })">@item.ColorName</a></td>
                        <td><a href="@Url.Action("Details", "Serial", new { id = item.SerialId })">@item.SerialFull</a></td>
                        <td>@item.Date</td>
                        <td>@item.Note</td>
                    </tr>
                }
            </table>
        </div>

        @if (Model.PageInfo.TotalPages > 1)
        {
            <div class="panel-footer">
                @Html.PageLinks(Model.PageInfo, x => Url.Action("Happy", new
                {
                    page = x
                }))
            </div>
        }
    </div>
}
else
{
    <h2>@ViewBag.Title</h2>
    @Html.AlertDanger("Щасливих квитків немає.")
}

<div>
    @Html.ActionLink("Назад до списку", "Index")
</div>