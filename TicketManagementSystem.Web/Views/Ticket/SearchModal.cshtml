<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>

        <h4 class="modal-title">Пошук квитків</h4>
    </div>

    <div class="modal-body">
        <div>
            @using (Ajax.BeginForm("Search", new AjaxOptions { UpdateTargetId = "search-result", HttpMethod = "GET" }))
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="text" name="number" class="form-control" placeholder="Номер або його частина" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-primary" value="Шукати" />
                        </div>
                    </div>
                </div>
            }
        </div>
        <div id="search-result"></div>
    </div>
</div>

