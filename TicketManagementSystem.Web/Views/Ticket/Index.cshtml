@model TicketIndexModel

@{
    ViewBag.Title = "Квитки";
    bool isAdmin = User.IsInRole("Admin");
}

@if (Model.Any())
{
    <h2>
        @ViewBag.Title
        <small>@Model.PageInfo.TotalItems шт.</small>
    </h2>

    <div class="panel panel-default">
        <div class="panel-heading">
            @Html.ActionLink("Щасливі квитки", "Happy") | 
            @Html.ActionLink("Нерозподілені квитки", "Unallocated") |
            @Html.ActionLink("Квитки з однаковими номерами", "Clones") | 
            <a id="ticket-search" onclick="searchModal()">Пошук квитків</a>
        </div>

        @if (isAdmin)
        {
            <div class="panel-body">
                @Html.ActionLink("Додати квиток", "Create")
            </div>
        }

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <tr>
                    <th>Номер</th>
                    <th>Пачка</th>
                    <th>Колір</th>
                    <th>Серія</th>
                    <th>Дата</th>
                    <th>Примітка</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr class="@item.TrClass()">
                        <td>@Html.ActionLink(item.Number, "Details", new { id = item.Id })</td>
                        <td><a href="@Url.Action("Details", "Package", new { id = item.PackageId })">@item.PackageName</a></td>
                        <td><a href="@Url.Action("Details", "Color", new { id = item.ColorId })">@item.ColorName</a></td>
                        <td><a href="@Url.Action("Details", "Serial", new { id = item.SerialId })">@item.SerialFull</a></td>
                        <td>@item.Date</td>
                        <td>@item.Note</td>
                    </tr>
                }
            </table>
        </div>

        @if (Model.PageInfo.TotalPages > 1)
        {
            <div class="panel-footer">
                @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new
                {
                    page = x
                }))
            </div>
        }
    </div>

    @section scripts {
        @Scripts.Render("~/Scripts/ticket-search-modal.js")
    }
}
else
{
    <h2>@ViewBag.Title</h2>
    @Html.AlertDanger("Матеріали відсутні.")
}
