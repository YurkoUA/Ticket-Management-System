@model IEnumerable<TicketDetailsModel>

@if (Model.Any())
{
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="close">
                <span aria-hidden="true">&times;</span>
            </button>

            <h4 class="modal-title">
                Квитки з таким же номером
                <small>@Model.Count() шт.</small>
            </h4>
        </div>

        <div class="modal-body table-responsive">
            <table class="table table-hover table-bordered">
                <tr>
                    <th>Номер</th>
                    <th>Пачка</th>
                    <th>Колір</th>
                    <th>Серія</th>
                    <th>Дата</th>
                    <th>Примітка</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(item.Number, "Details", new { id = item.Id })</td>
                        <td><a href="@Url.Action("Details", "Package", new { id = item.PackageId })">@item.PackageName</a></td>
                        <td><a href="@Url.Action("Details", "Color", new { id = item.ColorId })">@item.ColorName</a></td>
                        <td><a href="@Url.Action("Details", "Serial", new { id = item.SerialId })">@item.SerialFull</a></td>
                        <td>@item.Date</td>
                        <td>@item.Note</td>
                    </tr>
                }
            </table>
        </div>
    </div>
}
else
{
    @Html.AlertDanger("Таких квитків немає.")
}
