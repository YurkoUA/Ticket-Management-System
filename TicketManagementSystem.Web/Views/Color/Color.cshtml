@model PartialModel<int>

@{
    bool isAdmin = User.IsInRole("Admin");
}

<div id="color-grid">
    @Html.Action(Model.Action, Model.Controller, new { id = Model.Param, partial = true })
</div>

@if (isAdmin)
{
    <div id="color-result"></div>
    @Html.Partial("ToolbarPartial", Model.Param)
}
<br />

<div>
    @Html.ActionLink("Назад до списку", "Index")
</div>

@section scripts {
    @Scripts.Render("~/Scripts/packages-modal.js",
                    "~/Scripts/color.js")
}