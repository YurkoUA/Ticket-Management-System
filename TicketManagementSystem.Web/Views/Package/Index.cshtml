@model IEnumerable<PackageIndexModel>

@{
    ViewBag.Title = "Пачки";
    PageInfo pageInfo = ViewBag.PageInfo as PageInfo;
    bool isAdmin = User.IsInRole("Admin");
}

<h2>@ViewBag.Title</h2>

@if (Model.Any())
{
    <div class="panel panel-default">
        <div class="panel-heading">Пачки</div>

        @if (isAdmin)
        {
            <div class="panel-body">
                @Html.ActionLink("Створити пачку", "Create") |
                @Html.ActionLink("Створити спеціальну пачку", "Create", new { special = true })
            </div>
        }

        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.ColorName)</th>
                <th>@Html.DisplayNameFor(model => model.SerialName)</th>
                <th>@Html.DisplayNameFor(model => model.TicketsCount)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>@Html.DisplayNameFor(model => model.Nominal)</th>
                <th>@Html.DisplayNameFor(model => model.FirstNumber)</th>
                <th>@Html.DisplayNameFor(model => model.Note)</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</td>
                    <td>@Html.DisplayFor(modelItem => item.ColorName)</td>
                    <td>@Html.DisplayFor(modelItem => item.SerialName)</td>
                    <td>@Html.DisplayFor(modelItem => item.TicketsCount)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nominal)</td>
                    <td>@Html.DisplayFor(modelItem => item.FirstNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Note)</td>
                </tr>
            }
        </table>
    </div>


}
else
{
    @Html.AlertDanger("Матеріали відсутні.")
}

