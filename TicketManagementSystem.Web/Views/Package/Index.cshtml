@model PackageIndexModel

@{
    ViewBag.Title = "Пачки";
    PageInfo pageInfo = ViewBag.PageInfo as PageInfo;
    bool isAdmin = User.IsInRole("Admin");
}

<h2>@ViewBag.Title</h2>

@if (Model.Any())
{
    <div class="panel panel-default">
        <div class="panel-heading">Всього пачок: @Model.PageInfo.TotalItems</div>

        @if (isAdmin)
        {
            <div class="panel-body">
                @Html.ActionLink("Створити пачку", "Create") |
                @Html.ActionLink("Створити спеціальну пачку", "Create", new { special = true })
            </div>
        }

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <tr>
                    <th>ID</th>
                    <th>Назва</th>
                    <th>Квитків</th>
                    <th>Статус</th>
                    <th>Номінал</th>
                    <th>Перша цифра</th>
                    <th>Примітка</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</td>
                        <td>@Html.DisplayFor(modelItem => item.TicketsCount)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nominal)</td>
                        <td>@Html.DisplayFor(modelItem => item.FirstNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Note)</td>
                    </tr>
                }
            </table>
        </div>

        <div class="panel-footer">
            @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new
            {
                page = x
            }))
        </div>
    </div>


}
else
{
    @Html.AlertDanger("Матеріали відсутні.")
}