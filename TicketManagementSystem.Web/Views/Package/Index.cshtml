@model PackageIndexModel

@{
    ViewBag.Title = "Пачки";
    PageInfo pageInfo = ViewBag.PageInfo as PageInfo;
    bool isAdmin = User.IsInRole("Admin");
}

<h2>@ViewBag.Title</h2>
<hr />

@if (Model.Any())
{
    <div class="panel panel-default">
        <div class="panel-heading">Всього пачок: @Model.PageInfo.TotalItems</div>

        <div class="panel-body">
            <a onclick="searchModal()">Пошук пачок</a>
            @if (isAdmin)
            {
                <span> | </span>
                @Html.ActionLink("Створити пачку", "Create")
                <span> | </span>
                @Html.ActionLink("Створити спеціальну пачку", "Create", new { special = true })
            }
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <tr>
                    <th>ID</th>
                    <th>Назва</th>
                    <th>Квитків</th>
                    <th>Статус</th>
                    <th>Номінал</th>
                    <th>Перша цифра</th>
                    <th>Примітка</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.ActionLink(item.Name, "Details", new { id = item.Id }, new { })</td>
                        <td>@Html.DisplayFor(modelItem => item.TicketsCount)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nominal)</td>
                        <td>@Html.DisplayFor(modelItem => item.FirstNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Note)</td>
                    </tr>
                }
            </table>
        </div>

        @if (Model.PageInfo.TotalPages > 1)
        {
            <div class="panel-footer">
                @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new
           {
               page = x
           }))
            </div>
        }
    </div>

    @section scripts {
        @Scripts.Render("~/Scripts/package-search-modal.js")
    }
}
else
{
    @Html.AlertDanger("Матеріали відсутні.")
}
