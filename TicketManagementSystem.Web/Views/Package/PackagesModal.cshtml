@model IEnumerable<PackageDetailsModel>

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>

        <h4 class="modal-title">Список пачок</h4>
    </div>

    <div class="modal-body table-responsive">
        <table class="table table-hover table-bordered">
            <tr>
                <th>ID</th>
                <th>Назва</th>
                <th>Квитків</th>
                <th>Статус</th>
            </tr>

            @foreach (var package in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => package.Id)</td>
                    <td>@Html.ActionLink(package.Name, "Details", "Package", new { id = package.Id }, new { target = "_blank" }) </td>
                    <td>@Html.DisplayFor(modelItem => package.TicketsCount)</td>
                    <td>@Html.DisplayFor(modelItem => package.Status)</td>
                </tr>
            }
        </table>
    </div>
</div>