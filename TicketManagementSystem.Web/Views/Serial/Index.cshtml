@using TicketManagementSystem.Business.Infrastructure;

@model IEnumerable<TicketManagementSystem.Web.ViewModels.Serial.SerialIndexModel>

@{
    ViewBag.Title = "Серії";
    var isAdmin = User.IsAdmin();
}

<h2>@ViewBag.Title</h2>

@if (isAdmin)
{
    <p>
        @Html.ActionLink("Створити нову", "Create")
    </p>
}

@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.PackagesCount)</th>
            <th>@Html.DisplayNameFor(model => model.TicketsCount)</th>
            <th>@Html.DisplayNameFor(model => model.Note)</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</td>
                <td>@Html.DisplayFor(modelItem => item.PackagesCount)</td>
                <td>@Html.DisplayFor(modelItem => item.TicketsCount)</td>
                <td>@Html.DisplayFor(modelItem => item.Note)</td>
                <td>
                    @if (isAdmin)
                    {
                        @Html.ActionLink("Редагувати", "Edit", new { id = item.Id })

                        if (item.PackagesCount == 0 && item.TicketsCount == 0)
                        {
                            <span> | </span>

                            @Html.ActionLink("Видалити", "Delete", new { id = item.Id })
                        }
                    }
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>Дані відсутні!</p>
}
